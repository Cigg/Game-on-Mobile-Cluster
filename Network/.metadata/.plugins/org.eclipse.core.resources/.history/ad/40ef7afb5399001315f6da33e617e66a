package com.example.androidclient;

import android.graphics.Canvas;
import android.graphics.Color;
import android.graphics.Paint;
import android.graphics.RectF;

public class BouncingBall {
	private int id;
	
	private float posX;
	private float posY;
	private float speedX;
	private float speedY;
	
	private float ballRadius = 80;
	public RectF ballBounds;
	public Paint paint;
	
	BouncingBall(float x, float y, float dx, float dy){
		posX = x;
		posY = y;
		speedX = dx; 
		speedY = dx;
		ballBounds = new RectF();
		paint = new Paint();
	}
	
	public void update(float x, float y, float dx, float dy) {
		posX = x;
		posY = y;
		speedX = dx; 
		speedY = dx;
	}
	
	public void draw(Canvas canvas){
		ballBounds.set( posX-ballRadius, posY-ballRadius,
						posY+ballRadius, posY-ballRadius);
		paint.setColor(Color.GREEN);
		canvas.drawOval(ballBounds,paint);
	}
}
